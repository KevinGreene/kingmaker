<!-- Settings Modal -->
<input type="checkbox" id="settings-modal" class="modal-toggle" />
<div class="modal" role="dialog">
  <div class="modal-box w-11/12 max-w-2xl">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-lg font-bold">Settings</h3>
      <p>~~This is placeholder stuff for now~~</p>
      <label for="settings-modal" class="btn btn-sm btn-circle btn-ghost">âœ•</label>
    </div>

    <div class="space-y-6">
      <!-- General Settings Section -->
      <div class="card bg-base-200 p-4">
        <h4 class="font-semibold mb-3">General Settings</h4>
        <div class="space-y-3">
          <div class="form-control">
            <label class="label cursor-pointer">
              <span class="label-text">Dark Mode</span>
              <input type="checkbox" class="toggle toggle-primary" checked />
            </label>
          </div>
          <div class="form-control">
            <label class="label cursor-pointer">
              <span class="label-text">Auto-save Maps</span>
              <input type="checkbox" class="toggle toggle-secondary" checked />
            </label>
          </div>
          <div class="form-control">
            <label class="label cursor-pointer">
              <span class="label-text">Show Grid by Default</span>
              <input type="checkbox" class="toggle toggle-accent" />
            </label>
          </div>
        </div>
      </div>

      <!-- Notification Settings Section -->
      <div class="card bg-base-200 p-4">
        <h4 class="font-semibold mb-3">Notifications</h4>
        <div class="space-y-3">
          <div class="form-control">
            <label class="label cursor-pointer">
              <span class="label-text">Email Notifications</span>
              <input type="checkbox" class="toggle toggle-info" checked />
            </label>
          </div>
          <div class="form-control">
            <label class="label cursor-pointer">
              <span class="label-text">Push Notifications</span>
              <input type="checkbox" class="toggle toggle-success" />
            </label>
          </div>
        </div>
      </div>

      <!-- Map Settings Section -->
      <div class="card bg-base-200 p-4">
        <h4 class="font-semibold mb-3">Map Defaults</h4>
        <div class="space-y-3">
          <div class="form-control w-full">
            <label class="label">
              <span class="label-text">Default Map Size</span>
            </label>
            <select class="select select-bordered w-full">
              <option disabled selected>Choose size</option>
              <option>Small (20x20)</option>
              <option>Medium (40x40)</option>
              <option>Large (60x60)</option>
            </select>
          </div>
          <div class="form-control w-full">
            <label class="label">
              <span class="label-text">Default Theme</span>
            </label>
            <select class="select select-bordered w-full">
              <option disabled selected>Choose theme</option>
              <option>Forest</option>
              <option>Desert</option>
              <option>Dungeon</option>
              <option>City</option>
            </select>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal Actions -->
    <div class="modal-action">
      <button class="btn btn-secondary">Reset to Defaults</button>
      <button class="btn btn-primary">Save Settings</button>
      <label for="settings-modal" class="btn">Cancel</label>
    </div>
  </div>
  <label class="modal-backdrop" for="settings-modal">Close</label>
</div>