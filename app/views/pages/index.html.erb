<!DOCTYPE html>
<html data-theme="dark" lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= csrf_meta_tags %>
    <title>TOOL NAME HERE</title>
    <style>
        .hero-gradient {
            background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
        }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <div class="hero min-h-screen hero-gradient">
        <div class="hero-content text-center">
            <div class="max-w-4xl">
                <!-- Header -->
                <div class="mb-12">
                    <h1 class="text-6xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent mb-4">
                        TOOL NAME HERE
                    </h1>
                    <p class="text-xl text-base-content/80 max-w-2xl mx-auto">
                        The Ultimate Campaign Management Tool
                    </p>
                </div>

                <!-- Action Cards -->
                <div class="grid md:grid-cols-3 gap-6 mb-8">

                    <!-- Create New Map -->
                    <div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
                        <div class="card-body items-center text-center">
                            <div class="avatar placeholder mb-4">
                                <div class="bg-primary text-primary-content rounded-full w-16">
                                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round"
                                              stroke-linejoin="round"
                                              stroke-width="2"
                                              d="M12 4v16m8-8H4"/>
                                    </svg>
                                </div>
                            </div>
                            <h3 class="card-title text-lg">Create New Map</h3>
                            <p class="text-base-content/70 text-sm mb-4">Start building your campaign world with interactive map tools</p>
                            <div class="card-actions">
                              <%=link_to link_to "Get Started", new_map_path, class: "btn btn-primary btn-block"%>
                            </div>
                        </div>
                    </div>

                    <!-- Join Campaign -->
                    <div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
                        <div class="card-body items-center text-center">
                            <div class="avatar placeholder mb-4">
                                <div class="bg-secondary text-secondary-content rounded-full w-16">
                                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round"
                                          stroke-linejoin="round"
                                          stroke-width="2"
                                          d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"
                                      />
                                  </svg>
                                </div>
                            </div>
                            <h3 class="card-title text-lg">Join a Campaign</h3>
                            <p class="text-base-content/70 text-sm mb-4">Enter your GM's map code to preview an existing campaign</p>
                            <div class="card-actions">
                                <button class="btn btn-secondary btn-block" onclick="join_modal.showModal()">Join Now</button>
                            </div>
                        </div>
                    </div>

                    <!-- Sign In -->
                    <div class="card bg-base-200 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
                        <div class="card-body items-center text-center">
                            <div class="avatar placeholder mb-4">
                                <div class="bg-accent text-accent-content rounded-full w-16">
                                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round"
                                              stroke-linejoin="round"
                                              stroke-width="2"
                                              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                          />
                                    </svg>
                                </div>
                            </div>
                            <h3 class="card-title text-lg">Sign In</h3>
                            <p class="text-base-content/70 text-sm mb-4">Access your saved campaigns and premium features</p>
                            <div class="card-actions">
                                <button class="btn btn-accent btn-block" onclick="login_modal.showModal()">Sign In</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Join (Preview) Campaign Modal -->
    <dialog id="join_modal" class="modal" data-controller="map-link" >
      <div class="modal-box">
        <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
        </form>
        <h3 class="font-bold text-lg mb-4">Join Campaign</h3>
        <div class="form-control">
            <label class="label" for="map-link-input">
                <span class="label-text">Map Code</span>
            </label>
            <input type="text" id="map-link-input" placeholder="Enter your GM's map code" class="input input-bordered" />
        </div>
        <div class="modal-action">
          <form method="dialog">
            <button class="btn btn-ghost">Cancel</button>
          </form>
          <button class="btn btn-success" data-action="click->map-link#previewMap">Accept</button>
        </div>
      </div>
    </dialog>

    <!-- Login Modal -->
    <dialog id="login_modal" class="modal">
      <div class="modal-box">
        <div class="mb-4">
          <h3 class="font-bold text-lg">Sign In</h3>
          <p class="text-sm text-base-content/70">Welcome back to Kingmaker</p>
        </div>
        <%= render 'sessions/form' %>
      </div>
      <form method="dialog" class="modal-backdrop">
        <button>close</button>
      </form>
    </dialog>
  </body>
</html>