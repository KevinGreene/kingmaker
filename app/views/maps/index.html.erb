<% content_for :title, "Maps" %>

<div class="h-screen">

  <!-- Left-side Drawer -->
  <div class="drawer">
    <input id="admin-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-row h-screen">
      <!-- Vertical Sidebar -->
      <div class="bg-base-100 w-16 flex flex-col items-center space-y-6">

        <!-- Hamburger Menu -->
        <label for="admin-drawer" aria-label="open sidebar" data-testid="hamburger-menu" class="btn btn-square btn-ghost">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-6 h-6 stroke-current">
            <path color="white" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </label>

        <!-- Add/Plus Icon -->
        <%= link_to new_map_path, data: { testid: "new-map" }, class:"btn btn-accent btn-circle" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-6 h-6 stroke-gray-900">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
        <% end %>

        <!-- Edit/Pencil Icon -->
        <%= link_to '#', data: { id: "edit-map" }, class:"btn btn-accent btn-circle btn-disabled" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-6 h-6 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
          </svg>
        <% end %>

        <!-- Image/Gallery Icon -->
        <button class="btn btn-info btn-circle">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-6 h-6 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </button>

        <!-- Play Icon -->
        <%= link_to '#' , data: {id: "play-map"}, class:"btn btn-secondary btn-circle btn-disabled" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="-2 -2 24 24" class="w-6 h-6 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M0,9.75A9.75,9.75,0,1,1,9.75,19.5,9.761,9.761,0,0,1,0,9.75Zm1.5,0A8.25,8.25,0,1,0,9.75,1.5,8.259,8.259,0,0,0,1.5,9.75Zm5.75-3.8,7,3.8-7,3.8Z"></path>
          </svg>
        <% end %>

        <!-- Spacer -->
        <div class="flex-1"></div>

        <!-- User Profile Icon (Bottom) -->
        <button class="btn btn-square btn-outline btn-neutral">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-6 h-6 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
        </button>

        <!-- Settings Icon (Bottom) -->
        <button class="btn btn-square btn-outline btn-neutral">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-6 h-6 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
          </svg>
        </button>
        <div class="h-1"></div>
      </div>

      <!-- Main Content -->
      <div class="flex-1 bg-base-100 h-screen">
        <div data-controller="maps" class="flex h-screen bg-neutral">

          <!-- Thumbnail List -->
          <div class="w-2/5 bg-base-300 border-r border-base-200 flex flex-col">

            <!-- Header -->
            <div class="p-2 border-b-2 border-base-100">
                <h1 class="text-center text-3xl font-bold text-neutral-content">Your Maps</h1>
            </div>

            <!-- Maps Containers -->
            <div class="flex-1 overflow-y-auto px-2 h-auto">
              <div class="space-y-4">
                <% @maps.each do |map| %>
                  <div class="h-10 min-w-full"></div>
                  <%= link_to "#", data: {action: "click->maps#loadPreview", map_id: map.id} do %>
                    <div class="card bg-base-100 p-4 flex flex-row gap-4 hover hover:bg-base-200 hover:border-neutral-content shadow-md">
                      <!-- Map Thumbnail -->
                      <div class="border w-3/5 rounded-md overflow-hidden h-64">
                        <%= image_tag map.image, class: "w-full h-full object-cover" if map.image.present? %>
                      </div>
                      <!-- Map Details -->
                      <div class="flex flex-col flex-1 justify-between">
                        <div>
                          <p class="capitalize">
                            <strong> <%= map.name %> </strong>
                          </p>
                          <p class="first-letter:uppercase italic">
                            <%= map.description %>
                          </p>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Map Large Preview Window -->
          <div data-maps-target="preview" class="p-4 w-3/5 min-h-full items-center text-center content-center">
            <p><%= notice %></p>
            <!-- preview content loads here automatically -->
          </div>
        </div>
      </div>
    </div>
    <!-- Drawer Side Panel -->
    <div class="drawer-side">
      <label for="admin-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
      <ul class="menu bg-base-200 min-h-full min-w-1/5 max-w-1/3 p-4">
        <li><a>Sample Sidebar Item 1</a></li>
        <li><a>Sample Sidebar Item 2</a></li>
        <li><%= link_to "New map", new_map_path, class: "btn btn-primary" %></li>
      </ul>
    </div>
  </div>
</div>